
# SMS API Settings
sms_api_url=https://your-sms-api-url.com
sms_api_key=your_sms_api_key_here
sms_from_number=your_sms_from_number

# Performance Settings
sms_rate_limit=10
sms_timeout=30.0
sms_retry_attempts=3
sms_circuit_breaker_threshold=5
sms_circuit_breaker_timeout=60

# HTTP Client Settings
http_max_connections=100
http_max_keepalive_connections=20
http_connect_timeout=10.0

# Logging Settings
log_level=INFO
log_retention_days=7

# Redis/Celery Settings (optional - defaults provided)
# For external Redis connection (when using system_service Redis)
# Email Configuration
smtp_server=smtp.gmail.com
smtp_port=587
gmail_username=your_email
gmail_app_password=your_redis_password_here


REDIS_HOST=redis
REDIS_PORT=port
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0
REDIS_MAX_CONNECTIONS=20
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5


# RabbitMQ Configuration
RABBITMQ_HOST=rabbitmq-broker
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=admin
RABBITMQ_PASSWORD=SecureAdminPass123!
RABBITMQ_VHOST=/
RABBITMQ_CONNECTION_ATTEMPTS=3
RABBITMQ_RETRY_DELAY=2.0
RABBITMQ_HEARTBEAT=600
RABBITMQ_MESSAGE_TTL=300000